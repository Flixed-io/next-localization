{
    "name": "next-localization",
    "version": "0.8.4",
    "main": "dist/index.js",
    "source": "src/index.js",
    "module": "dist/index.modern.js",
    "unpkg": "dist/index.umd.js",
    "repository": "git@github.com:StarpTech/next-localization.git",
    "types": "types/index.d.ts",
    "author": {
        "name": "Dustin Deus",
        "email": "deusdustin@gmail.com",
        "url": "https://starptech.de"
    },
    "license": "MIT",
    "files": [
        "types/*.d.ts",
        "dist"
    ],
    "scripts": {
        "build": "microbundle --no-sourcemap --no-compress --jsx React.createElement",
        "tsd": "tsd",
        "dev": "microbundle watch",
        "test": "yarn lint && jest --collectCoverage",
        "lint": "eslint --fix ./src/**/* && yarn tsd",
        "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" --config ./.prettierrc",
        "release": "yarn build && yarn lint && release-it"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && yarn test"
        }
    },
    "browserslist": {
        "development": [
            "last 2 chrome versions",
            "last 2 firefox versions",
            "last 2 edge versions"
        ],
        "production": [
            ">1%",
            "last 4 versions",
            "Firefox ESR",
            "not ie < 11"
        ]
    },
    "dependencies": {
        "eslint": "^7.12.1",
        "rosetta": "1.1.0"
    },
    "peerDependencies": {
        "react": "^17.0.1"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-react": "^7.12.1",
        "@testing-library/jest-dom": "^5.11.5",
        "@testing-library/react": "^11.1.0",
        "@types/react": "^16.9.55",
        "babel-jest": "^26.6.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^5.0.3",
        "husky": "^4.3.0",
        "jest": "^26.6.1",
        "jest-environment-jsdom-sixteen": "^1.0.3",
        "microbundle": "^0.12.4",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.1.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-test-renderer": "^17.0.1",
        "release-it": "^14.2.0",
        "tsd": "^0.13.1"
    }
}
