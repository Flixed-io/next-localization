{
    "name": "next-localization",
    "version": "0.0.1",
    "main": "dist/index.js",
    "source": "src/index.js",
    "module": "dist/index.modern.js",
    "repository": "git@github.com:StarpTech/next-localization.git",
    "author": "starptech <deusdustin@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "microbundle --format modern,cjs --jsx React.createElement",
        "dev": "microbundle watch",
        "lint": "eslint --fix ./src/**/*",
        "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" --config ./.prettierrc",
        "postinstall": "cd example && yarn",
        "release": "yarn build && yarn lint && release-it"
    },
    "dependencies": {
        "eslint": "^7.7.0",
        "rosetta": "1.1.0"
    },
    "devDependencies": {
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.1.0",
        "eslint-plugin-simple-import-sort": "^5.0.3",
        "microbundle": "^0.12.3",
        "prettier": "^2.1.1",
        "release-it": "^13.7.0"
    }
}
